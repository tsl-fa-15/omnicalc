<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">New Loan Payment Calculation</h3>
  </div>
  <div class="panel-body">
    <form action="/loan_payment/results" class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 control-label" for="annual_percentage_rate" >APR</label>
        <div class="col-sm-10">
          <input class="form-control" name="annual_percentage_rate" type="number" step="any"  id="annual_percentage_rate" placeholder="Enter the APR of the loan (as a percent)">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="number_of_years">Years</label>
        <div class="col-sm-10">
          <input class="form-control" name="number_of_years" type="number" min="1" id="number_of_years" placeholder="Enter the number of years to repay the loan">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="principal_value">Principal</label>
        <div class="col-sm-10">
          <input class="form-control" name="principal_value" type="number" min="1" id="principal_value" placeholder="Enter the principal of the loan">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </div>

    </form>
  </div>
</div>



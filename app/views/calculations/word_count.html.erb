<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Word Count Results</h3>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Text</dt>
      <dd><%= @word_counter.get_text %></dd>

      <dt>Word Count</dt>
      <dd><%= @word_counter.word_count %></dd>

      <dt>Character Count (with spaces)</dt>
      <dd><%= @word_counter.character_count_with_spaces %></dd>

      <dt>Character Count (without spaces)</dt>
      <dd><%= @word_counter.character_count_without_spaces %></dd>

      <dt>Occurrences of <code><%= @word_counter.get_special_word %></code></dt>
      <dd><%= @word_counter.occurences %></dd>
    </dl>
  </div>
</div>
